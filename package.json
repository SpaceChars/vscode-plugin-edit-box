{
    "name": "edit-box",
    "displayName": "Edit Box",
    "description": "Edit Box is a document management plug-in that relies on the Git platform",
    "version": "0.0.1",
    "publisher": "EditBox",
    "author": {
        "name": "Space Chars",
        "email": "cxjfun@163.com"
    },
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.51.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SpaceChars/vscode-plugin-edit-box.git"
    },
    "license": "SEE LICENSE IN LICENSE",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:editbox.views.Home",
        "onView:editbox.views.documents",
        "onView:editbox.views.storeRepository",
        "onCommand:editbox.enableVSCodeGit",
        "onCommand:editbox.addRepository",
        "onCommand:editbox.removeRepository",
        "onCommand:editbox.editRepository",
        "onCommand:editbox.settedMasterRepository",
        "onCommand:editbox.refreshRepository",
        "onCommand:editbox.syncDocument",
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "colors": [
            {
                "id": "logo.color",
                "description": "Edit Box Logo Color",
                "defaults": {
                    "dark": "#00d2d3",
                    "light": "#34ace0",
                    "highContrast": "#34ace0",
                    "highContrastLight": "#34ace0"
                }
            }
        ],
        "icons": {
            "icon-logo": {
                "description": "Edit box Logo Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\E600"
                }
            },
            "icon-repository": {
                "description": "Storage Repository Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\EB51"
                }
            },
            "icon-file": {
                "description": "File Document Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\EABE"
                }
            },
            "icon-folder": {
                "description": "Foleder Document icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\EC17"
                }
            },
            "icon-close": {
                "description": "close Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\E602"
                }
            },
            "icon-delete": {
                "description": "Delete Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\E68E"
                }
            },
            "icon-add": {
                "description": "Add Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\E617"
                }
            },
            "icon-edit": {
                "description": "Edit Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\E8AC"
                }
            },
            "icon-change": {
                "description": "Edit Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\EB75"
                }
            },
            "icon-sync": {
                "description": "Edit Icon",
                "default": {
                    "fontPath": "iconfont.woff",
                    "fontCharacter": "\\E6DE"
                }
            }
        },
        "configuration": {
            "title": "Editbox",
            "properties": {
                "editbox.work.project": {
                    "type": "array",
                    "default": [],
                    "description": "Project List"
                }
            }
        },
        "commands": [
            {
                "command": "editbox.enableVSCodeGit",
                "title": "Enabel VSCode Git Repository"
            },
            {
                "command": "editbox.addRepository",
                "title": "Add Storage Repository",
                "icon": "$(icon-add)"
            },
            {
                "command": "editbox.removeRepository",
                "title": "Remove Storage Repository",
                "icon": "$(icon-delete)"
            },
            {
                "command": "editbox.editRepository",
                "title": "Edit Storage Repository",
                "icon": "$(icon-edit)"
            },
            {
                "command": "editbox.settedMasterRepository",
                "title": "Setted Master Repository",
                "icon": "$(icon-change)"
            },
            {
                "command": "editbox.refreshRepository",
                "title": "Refresh Repository",
                "icon": "$(icon-sync)"
            },
            {
                "command": "editbox.syncDocument",
                "title": "Synchronization Document",
                "icon": "$(icon-sync)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "editbox.addRepository",
                    "when": "view==editbox.views.storeRepository",
                    "group": "navigation"
                },
                {
                    "command": "editbox.refreshRepository",
                    "when": "view==editbox.views.storeRepository",
                    "group": "navigation"
                },
                {
                    "command": "editbox.syncDocument",
                    "when": "view==editbox.views.documents",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "editbox.editRepository",
                    "when": "view==editbox.views.storeRepository",
                    "group": "inline"
                },
                {
                    "command": "editbox.removeRepository",
                    "when": "view==editbox.views.storeRepository",
                    "group": "inline"
                },
                {
                    "command": "editbox.settedMasterRepository",
                    "when": "view==editbox.views.storeRepository",
                    "group": "inline"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "edit-box-panel",
                    "title": "Edit Box",
                    "icon": "$(icon-logo)"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "editbox.views.enableGit",
                "contents": "1. Please the Check git tool is installed,if no-installed please click [link](https://git-scm.com/downloads) download and finish install .\n 2. If inestalled but no enable VSCode Git,please the enabled VSCode Git \n [Enabled Git](command:editbox.enableVSCodeGit)",
                "when": "!config.git.enabled"
            },
            {
                "view": "editbox.views.storeRepository",
                "contents": "No found Repository \n[Add Repository](command:editbox.addRepository)",
                "when": "config.git.enabled"
            },
            {
                "view": "editbox.views.documents",
                "contents": "Don't Select Master Repository",
                "when": "config.git.enabled"
            }
        ],
        "views": {
            "edit-box-panel": [
                {
                    "id": "editbox.views.enableGit",
                    "name": "Enable Git",
                    "when": "!config.git.enabled",
                    "visibility": "visible"
                },
                {
                    "id": "editbox.views.documents",
                    "name": "Documents",
                    "when": "config.git.enabled",
                    "visibility": "visible"
                },
                {
                    "id": "editbox.views.storeRepository",
                    "name": "Store Repository",
                    "when": "config.git.enabled",
                    "visibility": "visible"
                }
            ]
        }
    },
    "scripts": {
        "compile": "webpack",
        "watch": "webpack --watch",
        "vscode:prepublish": "npm run package",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/vscode": "^1.72.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "eslint": "^8.24.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.8.4",
        "ts-loader": "^9.4.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "@vscode/test-electron": "^2.1.5"
    },
    "dependencies": {}
}
